<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_head"/>
    <LinearLayout
        android:background="@drawable/input_shap"
        android:layout_marginLeft="@dimen/d32"
        android:layout_marginRight="@dimen/d32"
        android:layout_marginTop="@dimen/d40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d90">
        <EditText
            android:id="@+id/et_account"
            android:textSize="@dimen/d32"
            android:textColor="#9A9A9A"
            android:hint="请输入登录账号"
            android:gravity="center"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:background="@drawable/input_shap"
        android:layout_marginLeft="@dimen/d32"
        android:layout_marginRight="@dimen/d32"
        android:layout_marginTop="@dimen/d40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d90">
        <EditText
            android:id="@+id/et_encrypted"
            android:textSize="@dimen/d32"
            android:textColor="#9A9A9A"
            android:hint="请输入密保"
            android:gravity="center"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/input_shap"
        android:layout_marginLeft="@dimen/d32"
        android:layout_marginRight="@dimen/d32"
        android:layout_marginTop="@dimen/d32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d90">
        <EditText
            android:id="@+id/et_pwd"
            android:textSize="@dimen/d32"
            android:textColor="#9A9A9A"
            android:hint="请输入新密码"
            android:gravity="center"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_marginTop="@dimen/d66"
        android:layout_marginRight="@dimen/d88"
        android:layout_marginLeft="@dimen/d88"
        android:background="@drawable/bt_shap"
        android:textSize="@dimen/d32"
        android:textColor="@color/wihte"
        android:text="确认"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d90" />
</LinearLayout>